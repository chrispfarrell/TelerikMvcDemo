@using Telerik.Web.Mvc.UI
@using TelerikMvc.Web.HtmlHelpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/shCore.css")" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/css/shThemeDefault.css")" rel="Stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("/scripts/sh/shCore.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushCpp.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushCSharp.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushCss.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushJava.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushJScript.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushPhp.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushPython.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushRuby.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushSql.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushVb.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushXml.js")" type="text/javascript"></script>
    <script src="@Url.Content("/scripts/sh/shBrushPerl.js")" type="text/javascript"></script>
    
    <script language='javascript' type="text/javascript">
        SyntaxHighlighter.config.bloggerMode = true;
        SyntaxHighlighter.config.clipboardSwf = '/Content/Flash/clipboard.swf';
        SyntaxHighlighter.all();
    </script>

     @(Html.Telerik().StyleSheetRegistrar().DefaultGroup(group => group
													.Add("telerik.common.css")
                                                    .Add("telerik." + Html.GetCurrentTheme() + ".css") 
													))

                                                    
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>Using the Telerik MVC Controls</h1>
            </div>
            <div id="logindisplay">
               &nbsp;
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Getting Started", "Index", "Home")</li>
                    <li>@Html.ActionLink("Grid", "Index", "Grid")</li>
                    <li>@Html.ActionLink("Editor", "Index", "Editor")</li>
                     <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        @(Html.Telerik().ScriptRegistrar().jQuery(false))
    </div>
</body>
</html>
